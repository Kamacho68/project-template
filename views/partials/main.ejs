<h1 class="mb-4">Form Template</h1>
    <form id="myForm" action="/submit" method="post" class="custom-form">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="input1">Bucket Name:</label>
                <input type="text" class="form-control" id="input1" name="input1" value="<%= formData.input1 || '' %>" required>
            </div>

            <!-- Region selection -->

            <!-- Message Medium -->
            <!-- <div class="col-md-6 mb-3">
                <select name="dropdown" id="dropdown" multiple>
                    <option value="Email">Email</option>
                    <option value="Push">Push</option>
                </select>
            </div> -->
            <div class="col-md-6 mb-3">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Choose Message Medium
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <% messageMedium.forEach(function(medium) { %>
                        <a class="dropdown-item" href="#">
                          <input type="checkbox" id="<%= medium.value %>" name="messageMedium[]" value="<%= medium.value %>"
                            <% if (selectedMediumOptions && selectedMediumOptions.includes(medium.value)) { %> checked <% } %>>
                          <label for="<%= medium.value %>"><%= medium.label %></label>
                        </a>
                      <% }); %>
                  </div>
            </div>
            <!-- <div class="dropdown">
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

        </div>
              </div> -->
            
            

            <div class="col-md-6 mb-3">
                <label for="input2">Input 2:</label>
                <input type="text" class="form-control" id="input2" name="input2" value="<%= formData.input2 || '' %>" required>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="date1">Date 1:</label>
                <div class="input-group date">
                    <input type="text" class="form-control datepicker" id="date1" name="date1" value="<%= formData.date1 || '' %>" required>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label for="date2">Date 2:</label>
                <div class="input-group date">
                    <input type="text" class="form-control datepicker" id="date2" name="date2" value="<%= formData.date2 || '' %>" required>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-12">
                <button type="submit" id="submitBtn" class="btn btn-primary" onclick="handleDropdownSelection()">Submit</button>
                <button type="button" class="btn btn-secondary" onclick="clearForm()">Clear</button>
            </div>
        </div>
    </form>

    <div id="responseDiv" class="mt-4">
        <% if (response) { %>
            <h2>Server Response:</h2>
            <div class="alert alert-success">
                <strong>Success!</strong> <%= response %>
            </div>
        <% } %>
    </div>