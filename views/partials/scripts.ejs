    <script>
        $(document).ready(function () {
            flatpickr('.datepicker', {
                dateFormat: 'Y-m-d',
                // Add any additional configuration options here
            });
        });
    
        function clearForm() {
            // Hide response message
            document.getElementById("responseDiv").innerHTML = '';
    
            // Enable the submit button
            document.getElementById("submitBtn").removeAttribute("disabled");
    
            // Manually clear form fields
            var form = document.getElementById("myForm");
            var inputs = form.getElementsByTagName('input');
            
            for (var i = 0; i < inputs.length; i++) {
                // Exclude buttons and other input types if needed
                if (inputs[i].type !== "button" && inputs[i].type !== "submit" && inputs[i].type !== "reset") {
                    inputs[i].value = "";
                }
            }
        }

        // Function to handle dropdown selection
        function handleDropdownSelection() {
            var selectedOptions = [];
            var dropdown = document.getElementById('dropdown');
            for (var i = 0; i < dropdown.options.length; i++) {
                if (dropdown.options[i].selected) {
                    selectedOptions.push(dropdown.options[i].value);
                }
            }
            console.log('Selected Options:', selectedOptions);
            return selectedOptions;
        }
    </script>